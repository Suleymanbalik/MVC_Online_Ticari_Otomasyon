@using MVC_Online_Ticari_Otomasyon.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-2">
    <div class="row">
        <label><strong>DEPARTMENTS</strong></label>
        <table class="table table-striped">
            <thead class="bg-black">
                <tr>
                    <th>Departmen ID</th>
                    <th>Departmen Name</th>
                    <th>Edit</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DepartmentId</td>
                        <td>@item.DepartmentName</td>
                        <td>
                            <a href="/Department/GetDepartment/@item.DepartmentId"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="/Department/DeleteDepartment/@item.DepartmentId" style="color:#ff0000; margin-left:5px"><i class="fa-solid fa-trash"></i></a>
                        </td>
                        <td> <a href="/Department/DepartmentDetail/@item.DepartmentId" style="color:#238a13; margin-left:5px"><i class="fa-solid fa-circle-info"></i></a></td>
                    </tr>

                }
            </tbody>
        </table>
        <a href="/Department/AddDepartment" style="color:#18740b; margin-left:3px"><i class="fa-solid fa-square-plus" style="margin-right:4px"></i>AddDepartment</a>
    </div>
</div>

