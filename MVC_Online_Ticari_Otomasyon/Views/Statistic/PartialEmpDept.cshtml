@model IEnumerable<MVC_Online_Ticari_Otomasyon.Models.Classes.Classes_for_Partial_Methods.EmployeeDepartment>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departments and Empoyee Number</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Department</th>
                    <th>Progress</th>
                    <th style="width: 40px">Employee Number</th>
                </tr>
            </thead>
            <tbody>
                @{ int rowNumber = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{rowNumber++;} @rowNumber</td>
                        <td>@item.NameDepartment</td>
                        <td>
                            @if (item.CustomerNumber <= 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: 25%"></div>
                                </div>
                            }

                            @if (item.CustomerNumber >= 2 && item.CustomerNumber < 4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }

                            @if (item.CustomerNumber >= 4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 75%"></div>
                                </div>
                            }

                        </td>
                        <td><span class="badge bg-danger">@item.CustomerNumber</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
