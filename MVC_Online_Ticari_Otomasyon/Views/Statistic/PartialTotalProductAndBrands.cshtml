@model IEnumerable<MVC_Online_Ticari_Otomasyon.Models.Classes.ProductAndBrnd>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Brands Amount in Product List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Brand</th>
                    <th>Progress</th>
                    <th style="width: 40px">Total</th>
                </tr>
            </thead>
            <tbody>
                @{ int rowNumber = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{rowNumber++;} @rowNumber</td>
                        <td>@item.BrndName</td>
                        <td>
                            @if (item.Number <= 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: 25%"></div>
                                </div>
                            }

                            @if (item.Number >= 2 && item.Number <= 4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }

                            @if (item.Number > 4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 75%"></div>
                                </div>
                            }

                        </td>
                        <td><span class="badge bg-danger">@item.Number</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
