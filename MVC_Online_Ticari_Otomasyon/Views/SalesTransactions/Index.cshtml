@using MVC_Online_Ticari_Otomasyon.Models.Classes
@model List<SalesTransaction>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="fw-bold">Sales</h2>
<div class="container mt-2">
    <div class="row">
        <table class="table table-striped" id="tbl1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Products</th>
                    <th>Employee</th>
                    <th>Customer</th>
                    <th>Quantity</th>
                    <th>Price(Per one)</th>
                    <th>Total Amount</th>
                    <th>Sales Date</th>
                    <th>Update</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SalesTransactionId</td>
                        <td>@item.Product.ProductName</td>
                        <td>@item.Employee.EmployeeFirstName @item.Employee.EmployeeLastName</td>
                        <td>@item.Current.CurrentFirstName @item.Current.CurrnetLastName</td>
                        <td>@item.SalesTransactionPiece</td>
                        <td>@item.SalesTransactionPrice</td>
                        <td>@item.SalesTransactionTotalAmount</td>
                        <td>@item.SalesTransactionDate</td>
                        <td class="text-center"><a href="/SalesTransactions/GetSale/@item.SalesTransactionId"><i class="fa-solid fa-pen-to-square"></i></a></td>
                        <td class="text-center"><a href="/SalesTransactions/PrintSalesDetails/@item.SalesTransactionId" style="color:#000000; margin-left:5px"><i class="fa-solid fa-circle-info"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/SalesTransactions/AddSale" style="color:#18740b; margin-left:3px"><i class="fa-solid fa-square-plus" style="margin-right:4px"></i>AddSalesTransactions</a>
    </div>
</div>



