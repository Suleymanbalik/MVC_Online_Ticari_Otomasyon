@model MVC_Online_Ticari_Otomasyon.Models.Classes.Category
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{

    <div class="form-group">
        <div class="row">
            <h2><strong>Update Category</strong></h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>
                            <strong>Category Name</strong>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.HiddenFor(m=>m.CategoryId)
                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                        </td>
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-dark">Update Category</button>
        </div>
    </div>

}

