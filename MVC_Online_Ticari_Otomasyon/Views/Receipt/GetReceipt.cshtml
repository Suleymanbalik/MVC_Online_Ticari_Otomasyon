@model MVC_Online_Ticari_Otomasyon.Models.Classes.Receipt
@{
    ViewBag.Title = "GetReceipt";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateReceipt</h2>
@using (Html.BeginForm("UpdateReceipt", "Receipt", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <form class="form-group" method="post">
                <table class="table">
                    <tr>
                        <th>Serial No</th>
                        <td>@Html.TextBoxFor(m => m.ReceiptSeriNo, new { @class = "form-control" })</td>
                        @Html.HiddenFor(m=>m.ReceiptId)
                    </tr>
                    <tr>
                        <th>Sequence No</th>
                        <td>@Html.TextBoxFor(m => m.ReceiptSequenceNo, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Tax Office</th>
                        <td>@Html.TextBoxFor(m => m.ReceiptTaxOffice, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Rceipt Delieverer</th>
                        <td>@Html.TextBoxFor(m => m.ReceiptDeliverer, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Rceipt Receiver</th>
                        <td>@Html.TextBoxFor(m => m.ReceiptReceiver, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Total Amount</th>
                        <td>@Html.TextBoxFor(m => m.ReceiptTotalAmount, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>@Html.TextBoxFor(m => m.ReceiptDate, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Time</th>
                        <td>@Html.TextBoxFor(m => m.ReceiptTime, new { @class = "form-control" })</td>
                    </tr>
                </table>
                <div class="dropdown-divider"></div>
                <div>
                    <button class="btn btn-info" type="submit">Update Receipt</button>
                </div>
            </form>
        </div>
    </div>

}
