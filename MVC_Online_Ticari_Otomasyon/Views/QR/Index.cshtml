
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Qr Code</h2>

<div class="container">
    <div class="row">

        @using (Html.BeginForm("Index", "QR", FormMethod.Post))
        {

            <input type="text" name="code" />
            <input type="submit" value="BuildImage"/>

        }
    </div>
    <br />
    @if (ViewBag.QRCodeImage !=null)
    {

        <img src="@ViewBag.QRCodeImage" alt="" style="width:250px ; height:250px"/>

    }
</div>